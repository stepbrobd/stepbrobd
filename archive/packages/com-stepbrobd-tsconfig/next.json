{
    "$schema": "https://json.schemastore.org/tsconfig",

    "display": "Next.js Configurations",

    "extends": "./default.json",

    "compilerOptions": {
        "baseUrl": ".",
        "plugins": [{ "name": "next" }],
        "allowJs": true,
        "declaration": false,
        "declarationMap": false,
        "incremental": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "noEmit": true,
        "resolveJsonModule": true,
        "strict": false,
        "target": "es6"
    }
}
